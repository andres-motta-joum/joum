{
  "hosting": [
    {
      "site": "joum",
      "public": "dist/joum",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "joum",
      "source": ".",
      "frameworksBackend": {}
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 9098
    },
    "hosting": {
      "port": 9097
    },
    "ui": {
      "enabled": true,
      "port": 9096
    }
  }
}
